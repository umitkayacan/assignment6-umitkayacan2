									<p class="card-text"> <a href="{{ path('academiciansDetail', { 'id': akademisyen.id }) }}" > {{ akademisyen.name  }} {{ akademisyen.surname  }}</a>  </p>
									<small>{{ akademisyen.province  }}</small>
								</div>
							</div>
						</div>					
				{% endfor %}    		               
      </div>
    </div>
  </div>
  
