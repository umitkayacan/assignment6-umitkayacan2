{% extends 'base.html.twig' %}
{% block title %}
{{parent()}} {{ title|title }} {% endblock %}


{% block content %} 
{{parent()}}
		{% include 'menu.html.twig' %}
		
		<div class="album py-5 bg-light">
			<div class="container">
				<h2>{{ title|title }} </h2>
				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
				
				{% for akademisyen in akademisyenler %}					
